<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/alumni"
        />
    <LinearLayout
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/gender"
        android:layout_alignTop="@+id/img"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youssef"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/last_name"
            android:text="ENNAOUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="18sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_above="@+id/data_of_birth"
        android:layout_below="@+id/full_name"
        android:layout_toEndOf="@+id/img"
        android:text="Marrakech"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/data_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gender"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/img"
        android:text="2001-04-24"
        android:textColor="@color/gray" />
    <TextView
        android:id="@+id/gender"
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/img"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>